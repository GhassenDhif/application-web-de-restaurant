
{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

<div class="example-wrapper">
    <a href="{{ path("addCat") }}" >Add Cat </a>
   


    <table border="1">
                    <thead>
                    <tr>     <th>Nom</th>
                        
                        <th>Modification</th>
                        <th>Suppression</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set cat = c  %}
                    {% for categorie in cat %}
                        <tr>
                            <td>{{ categorie.nom }}</td>
                          
                            <td>
                                <a class="btn btn-success" href="{{ path('modif_cat',{'id':categorie.id}) }}">Modifier</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href="{{ path('supp_cat',{'id':categorie.id}) }}">Supprimer</a>
                            </td>
                        </tr>

                    {% endfor %}

</tbody>
    </table>
</div>

{% endblock %}
